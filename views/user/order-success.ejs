    <div class="success-wrapper">
        <div class="success-container">
            <div class="hero-section">
                <div class="running-track"></div>
                <div class="athlete"></div>
                <div class="floating-icons"></div>
            </div>

            <div class="success-card">
                <div class="victory-badge">
                    <svg viewBox="0 0 24 24">
                        <path d="M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z"/>
                    </svg>
                </div>

                <div class="celebration-text">Victory Secured! üèÜ</div>
                <p class="text-center text-white-50">Your champion gear is on its way to you! Get ready to dominate the game!</p>
                <div class="order-details">
                    <div class="detail-row">
                        <span class="detail-label">Order Number</span>
                        <span class="detail-value"><%= order._id %></span>
                    </div>
                
                    <% order.items.forEach(item => { %> 
                        <div class="detail-row">
                            <span class="detail-label">Amount Paid</span>
                            <span class="detail-value">‚Çπ<%= order.totalAmount %></span>
                        </div>
                    <% }); %>
                
                    <div class="detail-row">
                        <span class="detail-label">Estimated Delivery</span>
                        <span class="detail-value"><%= order.deliveryDate.toDateString() %></span>
                    </div>
                </div>
                

                <div class="action-buttons">
                    <a href="/user/orders" class="btn-track">Track Your Victory</a>
                    <a href="/user/order-details" class="btn-orders">View All Orders</a>
                </div>
            </div>
        </div>
    </div>

