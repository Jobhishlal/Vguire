    /* Initially hide the captions */
.carousel-caption {
  opacity: 0;
  transform: translateY(20px); /* Move the text down slightly */
  transition: opacity 1s ease, transform 1s ease; /* Transition for fade and slide */
}

/* When the carousel item is active, reveal the caption */
.carousel-item.active .carousel-caption {
  opacity: 1;
  transform: translateY(0); /* Move the text to its original position */
}

/* Optional: Add slight delay to each text element for smoothness */
.carousel-item.active .carousel-caption h2,
.carousel-item.active .carousel-caption p {
  transition-delay: 0.2s;
}
/* Overlay for a darker background on text */
.carousel-caption .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Dark overlay */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: opacity 0.5s ease;
}

/* Text Styling */
.carousel-caption h2 {
    color: #fff;
    font-size: 3rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    font-weight: bold;
}

.carousel-caption p {
    color: #fff;
    font-size: 1.25rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    font-weight: 300;
}

/* Hover effect: Change opacity of overlay */
.carousel-item:hover .overlay {
    opacity: 0.7;
}

/* Smooth text animation on activation */
.carousel-item.active .overlay {
    opacity: 1;
    transition: opacity 1s ease-out;
}

.category-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    height: 200px;
}

.category {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px;
}

.category-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
}

.category-img {
    width: 50px;
    height: 50px;
    object-fit: cover;
    margin-bottom: 5px;
}

.filters {
    display: flex;
    align-items: center;
    margin-left: auto;
}

.filter-btn, .search-btn {
    margin: 0 10px;
    padding: 10px 15px;
    display: flex;
    align-items: center;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
}

.filter-btn i, .search-btn i {
    margin-right: 5px;
}
/* Categories container as flexbox */
.categories-container {
    display: flex;
    flex-wrap: wrap;  /* Allow items to wrap onto new lines */
    gap: 20px;  /* Space between the categories */
    justify-content: space-evenly;  /* Align categories to the left */
}

/* Individual category styling */
.category {

    display: flex;
    justify-content: center;  /* Center content horizontally */
    align-items: center;  /* Center content vertically */
    text-align: center;  /* Center the text in the span */
    border: 1px solid #ccc;  /* Optional: Add a border for visibility */
    border-radius: 10px;
}

.category img {
    width: 150px;  /* Make sure the image fills the container */
    height: 150px;  /* Make sure the image fills the container */
    object-fit: cover;  /* Ensure the image covers the area without distortion */
    border-radius: 8px;  /* Optional: adds rounded corners to the image */
}

/* Button styles */
.filters {
    display: flex;
    justify-content: right;
    gap: 20px;
    margin-top: 20px;
    
}

.filter-btn, .search-btn {
    padding: 10px 20px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}

.filter-btn:hover, .search-btn:hover {
    background-color: #0056b3;
}
.product-categories {
    color: black;
}

.product-categories:hover {
    color: rgb(60, 56, 56); /* Change this to your preferred hover color */
    text-decoration: underline; /* Optional: Add an underline on hover */
}
.product-overview {
    color: black;
}

.product-overview:hover {
    
    color: rgb(60, 56, 56); /* Change this to your preferred hover color */
    text-decoration: underline; /* Optional: Add an underline on hover */
}






</style>
