                        <div class="feature-badge"><i class="fas fa-shipping-fast"></i> Fast Delivery</div>
                        <div class="feature-badge"><i class="fas fa-sync"></i> Easy Returns</div>
                    </div>
    
                    <!-- Add to Cart Form -->
                    <form action="/user/add-to-cart" method="POST" class="mt-4">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                    
                        <!-- Size Selection -->
                        <div class="mb-4">
                            <h5 class="fw-bold">Select Size</h5>
                            <div class="size-buttons d-flex gap-2">
                                <% if (product.sizeS > 0) { %>
                                    <input type="radio" name="size" value="S" id="sizeS" class="d-none">
                                    <label for="sizeS" class="size-btn">S</label>
                                <% } %>
                                <% if (product.sizeM > 0) { %>
                                    <input type="radio" name="size" value="M" id="sizeM" class="d-none">
                                    <label for="sizeM" class="size-btn">M</label>
                                <% } %>
                                <% if (product.sizeL > 0) { %>
                                    <input type="radio" name="size" value="L" id="sizeL" class="d-none">
                                    <label for="sizeL" class="size-btn">L</label>
                                <% } %>
                                <% if (product.sizeXL > 0) { %>
                                    <input type="radio" name="size" value="XL" id="sizeXL" class="d-none">
                                    <label for="sizeXL" class="size-btn">XL</label>
                                <% } %>
                                <% if (product.sizeXXL > 0) { %>
                                    <input type="radio" name="size" value="XXL" id="sizeXXL" class="d-none">
                                    <label for="sizeXXL" class="size-btn">XXL</label>
                                <% } %>
                            </div>
                        </div>
                    
                        <!-- Quantity Input -->
                        <div class="mb-3">
                            <h5 class="fw-bold">Quantity</h5>
                            <input type="number" class="form-control quantity-input" name="quantity" min="1" value="1" required>
                        </div>
                    
                        <!-- Action Buttons -->
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-custom btn-add-cart">
                                <i class="fas fa-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </form>
                    
