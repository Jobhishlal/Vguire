<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Manager</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
   
    <style>


      .navbar {
    padding: 1rem;
    background: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.navbar-brand img {
    width: 60px;
    margin-right: 50px;
}

@media (max-width: 992px) {
    .navbar-brand img {
        margin-right: 0;
    }
    
    .nav-link {
        padding: 0.5rem 0;
        border-bottom: 1px solid #eee;
    }

    .navbar .d-flex {
        margin-top: 1rem;
        justify-content: center;
    }
}

.nav-link {
    color: var(--primary-color);
    margin: 0 1rem;
    position: relative;
}

.nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--secondary-color);
    transition: width 0.3s ease;
}

.nav-link:hover::after {
    width: 100%;
}

.login-btn {
    background: var(--secondary-color);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    transition: all 0.3s ease;
    text-decoration: none;
}

.login-btn:hover {
    background: #ff2e43;
    color: white;
    transform: translateY(-2px);
}

         

        :root {
            --gradient-primary: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --gradient-secondary: linear-gradient(135deg, #3b82f6 0%, #2dd4bf 100%);
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
            --shadow-md: 0 4px 12px rgba(0,0,0,0.12);
        }

        .main-content {
            padding: 2rem 0;
           
            background: #f8fafc;
        }

        .page-title {
            color: #1e293b;
            margin-bottom: 2.5rem;
            font-weight: 700;
            font-size: 2.5rem;
            text-align: center;
            position: relative;
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: var(--gradient-primary);
            border-radius: 2px;
        }

        .address-form-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow-sm);
            transition: transform 0.3s ease;
            border: none;
            overflow: hidden;
        }

        .card-header {
            background: var(--gradient-secondary);
            color: white;
            border: none;
            padding: 1.5rem;
        }

        .form-control {
            border-radius: 12px;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .btn-primary {
            background: var(--gradient-primary);
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: transform 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
        }

        .address-box {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            position: relative;
            overflow: hidden;
            border: none;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-sm);
        }

        .address-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--gradient-secondary);
        }

        .address-box:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .address-type {
            position: absolute;
            top: 1rem;
            right: 4rem;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            background: var(--gradient-secondary);
            color: white;
        }

        .address-actions {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }

        .action-btn {
            background: white;
            border: none;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
        }

        .action-btn:hover {
            transform: scale(1.1);
        }

        .dropdown-menu {
            border: none;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
            padding: 0.5rem;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: all 0.2s ease;
        }

        .dropdown-item:hover {
            background: #f1f5f9;
            transform: translateX(5px);
        }

        .full-address {
            background: #f8fafc;
            border-radius: 12px;
            margin-top: 1rem;
            padding: 1rem;
        }

        .address-icon {
            width: 32px;
            height: 32px;
            background: var(--gradient-primary);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            color: white;
        }

        @media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .address-box {
                margin: 1rem 0;
            }
        }
        .breadcrumb {
    list-style: none;
    display: flex;
    gap: 8px;
    font-size: 14px;
    padding: 10px 0;
}

.breadcrumb li {
    display: flex;
    align-items: center;
}

.breadcrumb li a {
    text-decoration: none;
    color: #007bff; /* Blue color */
    font-weight: 500;
    transition: color 0.3s ease-in-out;
}

.breadcrumb li a:hover {
    color: #0056b3; /* Darker blue on hover */
}

.breadcrumb li::after {
    content: "â€º"; /* Breadcrumb separator */
    margin: 0 8px;
    color: #666;
}

.breadcrumb li:last-child::after {
    content: ""; /* Remove separator from last item */
}

    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/image/Screenshot 2025-01-02 185508.png" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/user/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">   
                        <a class="nav-link" href="/user/profile">Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Breadcrumb Section (Move it below the navbar) -->
    <div class="container" style="margin-top: 100px;">
        <ul class="breadcrumb">
            <% breadcrumbs.forEach(breadcrumb => { %>
                <li><a href="<%= breadcrumb.url %>"><%= breadcrumb.name %></a></li>
            <% }) %>
        </ul>
    </div>
    
   


    <!-- Just the main content section -->
    <div class="main-content " >
        <div class="container" style="margin-bottom: 30px;">
            <div class="card address-form-card " >
                <div class="card-header">
                    <h4 class="m-0"><i class="fas fa-plus-circle me-2"></i>Add New Address</h4>
                </div>
                <div class="card-body p-4">
                    <form id="addAddressForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="mb-2">Full Name</label>
                                    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="mb-2">Phone Number</label>
                                    <input type="text" id="phone" name="phone" placeholder="Enter your phone number" required class="form-control">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="mb-2">Street Address</label>
                                    <input type="text" id="streetAddress" name="streetAddress" placeholder="Enter street address" required class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="mb-2">City</label>
                                    <input type="text" id="city" name="city" placeholder="Enter city" required class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="mb-2">State</label>
                                    <input type="text" id="state" name="state" placeholder="Enter state" required class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="mb-2">Pincode</label>
                                    <input type="text" id="pincode" name="pincode" placeholder="Enter pincode" required class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="mb-2">Address Type</label>
                                    <select id="addressType"   name="addressType" class="form-control" required>
                                        <option value="Home">Home</option>
                                        <option value="Work">Work</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Add Address
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Address List -->
            <div class="row" id="addressList">
                <% address.forEach((address, index) => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="address-box">
                            <div class="address-actions">
                                <div class="dropdown">
                                    <button class="action-btn" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/user/edit-address/<%= address._id %>" onclick="editAddress('<%= address._id %>')">

                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="deleteAddress('<%= address._id %>')">

                                                <i class="fas fa-trash-alt me-2"></i>Delete
                                            </a>
                                        </li>
                                        
                                       
                                        <form id="deleteForm-<%= address._id %>" action="/user/delete-address/<%= address._id %>" method="POST"></form>

                                        
                                    </ul>

                                </div>
                            </div>
                            <span class="address-type"><%= address.addressType %></span>
                            <h5 class="mb-3"><%= address.fullName %></h5>
                            <div class="mb-2">
                                <span class="address-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </span>
                                <%= address.city %>, <%= address.state %>
                            </div>
                            <div class="full-address" id="details-<%= address._id %>">
                                <div class="mb-2">
                                    <span class="address-icon">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                    <%= address.phone %>
                                </div>
                                <div class="mb-2">
                                    <span class="address-icon">
                                        <i class="fas fa-home"></i>
                                    </span>
                                    <%= address.streetAddress %>
                                </div>
                                <div>
                                    <span class="address-icon">
                                        <i class="fas fa-map-pin"></i>
                                    </span>
                                    <%= address.pincode %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>        

    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
  $(document).ready(function () {
    $("#addAddressForm").submit(function (e) {
        e.preventDefault();

       
        const formData = {
            fullName: $("#fullName").val().trim(),
            phone: $("#phone").val().trim(),
            streetAddress: $("#streetAddress").val().trim(),
            city: $("#city").val().trim(),
            state: $("#state").val().trim(),
            pincode: $("#pincode").val().trim(),
            addressType: $("#addressType").val(),
        };

        
        const phoneRegex = /^(?!0{10})[0-9]{10}$/; 
        const pincodeRegex = /^[0-9]{6}$/;

        if (!phoneRegex.test(formData.phone)) {
            Swal.fire({ icon: 'error', title: 'Invalid Phone Number', text: 'Please enter a valid 10-digit phone number' });
            return;
        }

        if (!pincodeRegex.test(formData.pincode)) {
            Swal.fire({ icon: 'error', title: 'Invalid Pincode', text: 'Pincode must be a 6-digit number' });
            return;
        }

   
        $.ajax({
            type: "POST",
            url: "/user/add-address",
            contentType: "application/json",
            data: JSON.stringify(formData),
            success: function (response) {
                console.log('1', response);
                
                if (response.success) {
                    console.log('here');
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Address Added!',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        location.reload(); 
                    });
                } else {
                    console.log('there');
                    
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message || 'Something went wrong!',
                    });
                }
            },
            error: function (xhr) {
                Swal.fire({
                    icon: 'error',
                    title: 'Server Error',
                    text: xhr.responseJSON?.message || 'Failed to add address, try again later.',
                });
            }
        });
    });
});

       
        function editAddress(id) {
            Swal.fire({
                title: 'Edit Address',
                html: `
                    <form id="editForm" class="text-start">
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="editFullName">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" class="form-control" id="editPhone">
                        </div>
                    </form>
                `,
                showCancelButton: true,
                confirmButtonText: 'Save Changes'
            });
        }
    
        function deleteAddress(addressId) {
            Swal.fire({
                title: "Delete Address?",
                text: "Are you sure you want to delete this address?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    
                    document.getElementById(`deleteForm-${addressId}`).submit();
                }
            });
        }
    </script>
    
</body>
</html>