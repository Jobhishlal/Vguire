<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Program</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4f46e5;
            --secondary: #3730a3;
            --success: #059669;
            --light-bg: #f9fafb;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .referral-container {
            max-width: 600px;
            width: 100%;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .referral-header {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            padding: 2rem;
            text-align: center;
            color: white;
        }

        .referral-icon {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2rem;
        }

        .referral-body {
            padding: 2rem;
        }

        .rewards-info {
            background: rgba(79, 70, 229, 0.1);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .rewards-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .rewards-list li {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            color: #374151;
        }

        .rewards-list li i {
            color: var(--primary);
            margin-right: 10px;
        }

        .code-container {
            background: #f3f4f6;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .referral-code {
            font-family: monospace;
            font-size: 1.5rem;
            letter-spacing: 2px;
            color: var(--primary);
            text-align: center;
            margin-bottom: 1rem;
            background: white;
            padding: 1rem;
            border-radius: 8px;
            border: 2px dashed var(--primary);
        }

        .btn-copy {
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-copy:hover {
            background: var(--secondary);
            transform: translateY(-2px);
        }

        .btn-share {
            background: var(--success);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-share:hover {
            background: #047857;
            transform: translateY(-2px);
        }

        .share-options {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .share-option {
            flex: 1;
            text-align: center;
            padding: 1rem;
            border-radius: 8px;
            background: #f3f4f6;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .share-option:hover {
            background: #e5e7eb;
            transform: translateY(-2px);
        }

        .share-option i {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: #4b5563;
        }

        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        .custom-toast {
            background: #10b981;
            color: white;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 10px;
            display: none;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }


.navbar {
    padding: 1rem;
    background: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.navbar-brand img {
    width: 60px;
    margin-right: 50px;
}

@media (max-width: 992px) {
    .navbar-brand img {
        margin-right: 0;
    }
    
    .nav-link {
        padding: 0.5rem 0;
        border-bottom: 1px solid #eee;
    }

    .navbar .d-flex {
        margin-top: 1rem;
        justify-content: center;
    }
}

.nav-link {
    color: var(--primary-color);
    margin: 0 1rem;
    position: relative;
}

.nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--secondary-color);
    transition: width 0.3s ease;
}

.nav-link:hover::after {
    width: 100%;
}

.login-btn {
    background: var(--secondary-color);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    transition: all 0.3s ease;
    text-decoration: none;
}

.login-btn:hover {
    background: #ff2e43;
    color: white;
    transform: translateY(-2px);
}

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/image/Screenshot 2025-01-02 185508.png" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/user/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">   
                        <a class="nav-link" href="#">Profile</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    
                    <a href="#" class="me-3"><i class="fas fa-search"></i></a>
                    <a href="#" class="me-3"><i class="fas fa-shopping-cart"></i></a>
                    <a href="#"><i class="fas fa-heart"></i></a>
                </div>
            </div>
        </div>
    </nav> 



    <div class="referral-container " style="margin-top: 100px;">
        <div class="referral-header">
            <div class="referral-icon">
                <i class="fas fa-gift"></i>
            </div>
            <h2>Your Referral Program</h2>
            <p class="mb-0">Share and earn amazing rewards!</p>
        </div>

        <div class="referral-body">
            <div class="rewards-info">
                <h5 class="mb-3">Rewards you can earn:</h5>
                <ul class="rewards-list">
                    <li><i class="fas fa-check-circle"></i> Get ₹100 for each friend who joins</li>
                    <li><i class="fas fa-check-circle"></i> Your friend gets ₹50 signup bonus</li>
                    <li><i class="fas fa-check-circle"></i> Extra rewards on your friend's first purchase</li>
                </ul>
            </div>

            <div class="code-container">
                <label class="text-muted mb-2">Your unique referral code:</label>
                <div class="referral-code" id="referralCode"><%= referralCode %></div>
                <button class="btn-copy" onclick="copyReferral()">
                    <i class="fas fa-copy me-2"></i>Copy Code
                </button>
            </div>

            <button class="btn-share" onclick="shareReferral()">
                <i class="fas fa-share-alt me-2"></i>Share with Friends
            </button>

            <div class="share-options mt-4">
                <div class="share-option" onclick="shareViaWhatsApp()">
                    <i class="fab fa-whatsapp"></i>
                    <div>WhatsApp</div>
                </div>
                <div class="share-option" onclick="shareViaFacebook()">
                    <i class="fab fa-facebook"></i>
                    <div>Facebook</div>
                </div>
                <div class="share-option" onclick="shareViaTwitter()">
                    <i class="fab fa-twitter"></i>
                    <div>Twitter</div>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container">
        <div class="custom-toast" id="copyToast">
            <i class="fas fa-check-circle me-2"></i>
            Referral code copied successfully!
        </div>
    </div>

   



    <script>
        function showToast() {
            const toast = document.getElementById('copyToast');
            toast.style.display = 'block';
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }

        function copyReferral() {
            const referralCode = document.getElementById('referralCode').innerText;
            navigator.clipboard.writeText(referralCode)
                .then(() => {
                    showToast();
                })
                .catch(err => {
                    console.error('Failed to copy:', err);
                });
        }

        function shareReferral() {
            const referralCode = document.getElementById('referralCode').innerText;
            const shareText = `Join now using my referral code: ${referralCode}`;
            
            if (navigator.share) {
                navigator.share({
                    title: "Join and Earn Rewards!",
                    text: shareText,
                    url: window.location.origin + "/user/signup?ref=" + referralCode
                }).catch(err => console.log("Error sharing:", err));
            } else {
                copyReferral();
            }
        }

        function shareViaWhatsApp() {
            const referralCode = document.getElementById('referralCode').innerText;
            const text = encodeURIComponent(`Join now using my referral code: ${referralCode}\n${window.location.origin}/user/signup?ref=${referralCode}`);
            window.open(`https://wa.me/?text=${text}`);
        }

        function shareViaFacebook() {
            const referralCode = document.getElementById('referralCode').innerText;
            const url = encodeURIComponent(`${window.location.origin}/user/signup?ref=${referralCode}`);
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`);
        }

        function shareViaTwitter() {
            const referralCode = document.getElementById('referralCode').innerText;
            const text = encodeURIComponent(`Join now using my referral code: ${referralCode}`);
            const url = encodeURIComponent(`${window.location.origin}/user/signup?ref=${referralCode}`);
            window.open(`https://twitter.com/intent/tweet?text=${text}&url=${url}`);
        }
    </script>
</body>
</html>