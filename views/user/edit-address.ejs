    <script>
    $(document).ready(function () {
        $("#editAddressForm").submit(function (e) {
            e.preventDefault();

            let addressId = $("#editAddressId").val();
            let fullName = $("#editFullName").val().trim();
            let phone = $("#editPhone").val().trim();
            let streetAddress = $("#editStreetAddress").val().trim();
            let city = $("#editCity").val().trim();
            let state = $("#editState").val().trim();
            let pincode = $("#editPincode").val().trim();
            let addressType = $("#editAddressType").val();

            let phoneRegex = /^[1-9][0-9]{9}$/;
            const pincodeRegex = /^[0-9]{6}$/;
            

            if (!fullName || !phone || !streetAddress || !city || !state  || !addressType) {
                Swal.fire({
                    icon: "error",
                    title: "All Fields Required",
                    text: "Please fill in all the fields before submitting.",
                    showConfirmButton: false,
                    timer: 2000
                });
                return;
            }

            if (!phoneRegex.test(phone)) {
                Swal.fire({
                    icon: "error",
                    title: "Invalid Phone Number",
                    text: "Please enter a valid 10-digit phone number.",
                    showConfirmButton: false,
                    timer: 2000
                });
                return;
            }
            if(!pincodeRegex.test(pincode)){
                Swal.fire({
                    icon: "error",
                    title: "Invalid Pincode",
                    text: "Please enter a valid 6-digit pincode.",
                    showConfirmButton: false,
                    timer: 2000
                });
                return
             
            }

            let updatedAddress = {
                fullName: fullName,
                phone: phone,
                streetAddress: streetAddress,
                city: city,
                state: state,
                pincode: pincode,
                addressType: addressType
            };

            $.ajax({
                url: `/user/edit-address/${addressId}`,
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(updatedAddress),
                success: function (response) {
                    Swal.fire({
                        icon: "success",
                        title: "Address Updated!",
                        text: "Your address has been updated successfully.",
                        showConfirmButton: false,
                        timer: 1500
                    });

                    setTimeout(() => window.location.href = "/user/address", 1500);
                },
                error: function () {
                    Swal.fire({
                        icon: "error",
                        title: "Update Failed",
                        text: "An error occurred while updating the address.",
                        showConfirmButton: false,
                        timer: 2000
                    });
                }
            });
        });
    });
    </script>
</body>
