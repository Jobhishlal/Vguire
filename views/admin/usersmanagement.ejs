    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
   const formatEmailForId = (email) => email.replace(/[@.]/g, '-');

const toggleBlockUser = async (email) => {
    try {
        const response = await fetch(`/admin/toggleBlock/${encodeURIComponent(email)}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
        });

        if (!response.ok) {
            throw new Error('Failed to toggle block status');
        }

        const data = await response.json();
        const formattedEmail = formatEmailForId(email);
        const statusElement = document.getElementById(`block-status-${formattedEmail}`);

        if (!statusElement) {
            console.error(`Element with ID block-status-${formattedEmail} not found.`);
            return;
        }

        if (data.blocked) {
            statusElement.textContent = 'Blocked';
            statusElement.classList.add('bg-danger');
            statusElement.classList.remove('bg-success');

            Swal.fire({
                icon: 'warning',
                title: 'User Blocked',
                text: `The user with email ${email} has been blocked.`,
                confirmButtonColor: '#d33',
            });
        } else {
            statusElement.textContent = 'Active';
            statusElement.classList.add('bg-success');
            statusElement.classList.remove('bg-danger');

            Swal.fire({
                icon: 'success',
                title: 'User Unblocked',
                text: `The user with email ${email} has been unblocked.`,
                confirmButtonColor: '#3085d6',
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong!',
        });
    }
};


document.querySelectorAll('.block-toggle-btn').forEach(button => {
    button.addEventListener('click', (event) => {
        event.preventDefault();
        const email = button.getAttribute('data-email');
        toggleBlockUser(email);
    });
});

    </script>
