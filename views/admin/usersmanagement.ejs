                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.displayName ?? user.fname %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <% if (user.blocked) { %>
                                            <span id="block-status-<%= user.email.replace(/[@.]/g, "-") %>" class="badge bg-danger">Blocked</span>
                                        <% } else { %>
                                            <span id="block-status-<%= user.email.replace(/[@.]/g, "-") %>" class="badge bg-success">Active</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="javascript:void(0);" 
                                           class="btn btn-sm <%= user.blocked ? 'btn-outline-light' : 'btn-outline-danger' %> block-toggle-btn" 
