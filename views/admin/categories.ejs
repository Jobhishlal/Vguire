<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VGURIE - Full Category Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link href="/admin/styles.css" rel="stylesheet">
    <style>
        :root {
            --dark-bg: #121212;
            --card-bg: #1e1e1e;
            --accent-color: #2575fc;
            --primary-color: #4e73df;
        }
        body {
            background-color: var(--dark-bg);
            font-family: 'Arial', sans-serif;
            color: #e4e4e4;
        }
        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }
        .sidebar {
            width: 260px;
            background: linear-gradient(180deg, #010612 0%, #224abe 100%);
            position: fixed;
            height: 100vh;
            color: #fff;
            padding: 1.5rem;
            box-shadow: 2px 0 15px rgba(0, 0, 0, 0.3);
        }
        .logo h2 {
            font-size: 2rem;
            font-weight: bold;
            color: white;
            margin-bottom: 2rem;
        }
        .sidebar-nav ul {
            padding: 0;
            list-style: none;
        }
        .sidebar-nav li {
            margin-bottom: 1.2rem;
        }
        .sidebar-nav a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            padding: 0.9rem 1.25rem;
            display: flex;
            align-items: center;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        .sidebar-nav a:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }
        .main-content {
            margin-left: 260px;
            flex-grow: 1;
            padding: 2.5rem 3rem;
            background-color: #181818;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        .header h1 {
            font-size: 2rem;
            color: white;
            margin-bottom: 0;
        }
        .btn-add-category {
            background-color: var(--primary-color);
            color: white;
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            display: flex;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .btn-add-category:hover {
            transform: translateY(-3px);
        }
        .category-card {
            background-color: var(--card-bg);
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }
        .category-card:hover {
            transform: translateY(-5px);
        }
        .category-actions a {
            padding: 0.6rem 1rem;
            border-radius: 0.5rem;
            margin-right: 1rem;
            transition: all 0.3s ease;
        }
        .category-actions a:hover {
            transform: scale(1.05);
        }
        .btn-group form button {
            width: 100%;
            border-radius: 0.5rem;
            padding: 0.5rem;
            margin-top: 0.5rem;
            font-weight: 600;
        }
        .category-details {
            margin-top: 1.2rem;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="logo">
                <h2>VGURIE</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="/admin/dashboard"><i class="fas fa-th-large me-2"></i> Dashboard</a></li>
                    <li><a href="/admin/product"><i class="fas fa-box me-2"></i> Product</a></li>
                    <li><a href="#"><i class="fas fa-shopping-cart me-2"></i> Orders</a></li>
                    <li><a href="/admin/usersmanagement"><i class="fas fa-users me-2"></i> Users</a></li>
                    <li><a href="/admin/categories"><i class="fas fa-tags me-2"></i> Categories</a></li>
                    <li><a href="#"><i class="fas fa-gift me-2"></i> Offers</a></li>
                    <li><a href="#"><i class="fas fa-ticket-alt me-2"></i> Coupon</a></li>
                    <li><a href="#"><i class="fas fa-image me-2"></i> Banner</a></li>
                    <li><a href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
                    <li><a href="#" class="logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <div class="header">
                <h1>Category Management</h1>
                <a href="/admin/add-category" class="btn-add-category">
                    <i class="fas fa-plus me-2"></i> Add Category
                </a>
            </div>
        
            <div class="row">
                <% categories.forEach(category => { %>
                <div class="col-md-4 mb-4">
                    <div class="category-card">
                        <div class="d-flex justify-content-between">
                            <h4><%= category.name %></h4>
                            <div class="category-actions">
                                <a href="/view-category/<%= category.id %>" class="btn btn-info text-white">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/admin/edit-category/<%= category.id %>" class="btn btn-warning text-white">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a href="/admin/delete-category/<%= category.id %>" class="btn btn-danger text-white">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
        
                        <!-- Category Image -->
                        <div class="text-center my-3">
                            <img src="/uploads/categories/<%= category.image %>" alt="<%= category.name %>" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
                        </div>
        
                        <div class="category-details">
                            <p><strong>Description:</strong> <%= category.description %></p>
                            <p><small><i class="fas fa-cube me-2"></i>Total Products: <%= category.productCount %></small></p>
                            <p><small><i class="fas fa-calendar-alt me-2"></i>Created: <%= category.createdAt %></small></p>
                        </div>
        
                        <form action="/admin/listcategory/<%= category.id %>" method="POST">
                            <% if (category.isisted) { %>
                                <button type="submit" class="btn btn-danger"> <!-- Red color for "Unlist" -->
                                    <i class="fas fa-ban me-2"></i> Unlist
                                </button>
                            <% } else { %>
                                <button type="submit" class="btn btn-success"> <!-- Green color for "List" -->
                                    <i class="fas fa-check me-2"></i> List
                                </button>
                            <% } %>
                        </form>


                          
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </main>
        
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
